<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iCookingAssistant.SettingsPage" Title="Settings">
	<ContentPage.ToolbarItems>
		<ToolbarItem Order="Primary" Priority="0" Text="Save" Command="{Binding SaveSettingsCommand}"></ToolbarItem>
	</ContentPage.ToolbarItems>
    <ContentPage.Content>
		<Grid Padding="10" VerticalOptions="Start">
			<Entry Placeholder="Enter your email" ReturnType="Done" Keyboard="Email"></Entry>
		</Grid>
    </ContentPage.Content>
</ContentPage>